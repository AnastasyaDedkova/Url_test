import webbrowser
#  Обработка  введенного запроса
def req():
    call1 = input("Введите ссылку на сайт, который нужно проверить")
    if call1[0] == 'h' and call1[4] == 's':
        call2 = call1[8:]
    elif call1[0] == 'h' and call1[4] == ':':
        call2 = call1[7:]
    else:
        call2 = call1
    if call2[-1] == '/':
        call = call2[:-1]
    else:
        call = call2
    return call
#  Переадресация на сайт
def test_url():
    webbrowser.open('https://www.virustotal.com/gui/search/' + site_url)

site_url = req()
test_url()

